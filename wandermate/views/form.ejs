</div>



<% if (guides){ %>
<div style="background-image: url('https://demos.creative-tim.com/argon-design-system-pro-angular/assets/img/ill/testimonial_bg.svg')">

	<div class="container" id="guides" style="padding-top:11%;padding-bottom:7%">
	  <div class="row">

			<% guides.forEach(function(item,index){ %>
	    <div class="col-md-4">
	      <div class="our-team" id="card">
	        <div class="picture" style="margin-bottom:-1%;">
	          <img style="width:17vh;height:17vh;margin-left:-0.5%;margin-top:3%;" class="img-fluid" src=<%=item.guide.img.path%> >
	        </div>
					<form class="" action="/place/booked" method="post" style="margin-bottom:10%">

	        <div class="team-content">
	          <h3 class="name"><%=item.name%></h3>
	          <h4 class="title"><%= item.about %></h4>
						<div style="width:70%;margin-left:15%;margin-top:5%;" class="col-sm-12">
								<div class="form-group">
									<div class="row">
										<div style="margin-top:3%;" class="col-md-3">
											<label>Timeslot</label>
										</div>
										<div class="col-md-9">
											<select style="float:left;" name="time" class="form-control">
													<option disabled="" selected="">- select -</option>
													<% item.time.forEach(function(slot,index){ %>
														<option value=<%=	slot%>><%=slot%></option>
													<% }); %>

											</select>
										</div>
									</div>
									</div>
						</div>
						<br>
						<input type='submit' class='btn btn-finish btn-fill btn-success btn-wd' style="margin-top:3%;"/>
						<p style="display:none;">
							<input type='text' class='btn btn-finish btn-fill btn-success btn-wd' name='name' value='<%=item.name%>' />
						</p>
					</form>

	        </div>
	        <ul class="social">
						<li><a href="<%= item.facebook %>" class="fab fa-facebook" aria-hidden="true"></a></li>
	          <li><a href="<%=item.instagram%>" class="fab fa-instagram" aria-hidden="true"></a></li>
	          <li><a href="#" class="fab fa-google-plus" aria-hidden="true"></a></li>
	        </ul>
	      </div>
	    </div>
			<% }); %>



	  </div>
	</div>










</div>

<% }%>

<script type="text/javascript">

  var arr = ['mrng', 'noon', 'evng'];

	function check(name){
		console.log(arr)
	  document.getElementById(name).checked = true;
		for(var i=0;i<3;i++){
			if(arr[i] != name){
				uncheck(arr[i]);
			}
		}
		console.log(document.getElementById("mrng").checked)
		console.log(document.getElementById("noon").checked)
		console.log(document.getElementById("evng").checked)
	}

	function uncheck(name){
		console.log(arr)
		document.getElementById(name).checked = false;
	}

</script>

