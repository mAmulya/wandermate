	<div class="image-container set-full-height" style="background-image: url('../styles/assets/img/paper-4.jpeg')">


		<div id="myDiv">








	    <!--   Big container   -->
	    <div class="container">
	        <div class="row">
		        <div class="col-sm-8 col-sm-offset-2">


		            <!--      Wizard container        -->
		            <div class="wizard-container">
		                <div class="card wizard-card" data-color="green" id="wizard">
		                <form method="post" action="/place/form#guides">
		                <!--        You can switch " data-color="green" "  with one of the next bright colors: "blue", "azure", "orange", "red"       -->

		                    	<div class="wizard-header">
		                        	<h3 class="wizard-title">Book Your Guide</h3>
		                        	<p class="category">You are a just a step away in booking your guide</p>
		                    	</div>
								<div class="wizard-navigation">
									<div class="progress-with-circle">
									    <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="4" style="width: 15%;"></div>
									</div>
									<ul>
			                            <li>
											<a href="#location" data-toggle="tab">
												<div class="icon-circle">
													<i class="ti-map"></i>
												</div>
												Location
											</a>
										</li>
										<li>
				<a href="#slot" data-toggle="tab">
					<div class="icon-circle">
						<i class="ti-calendar"></i>
					</div>
					Slot
				</a>
			</li>
			<li>
<a href="#type" data-toggle="tab">
<div class="icon-circle">
<i class="ti-layout-list-thumb"></i>
</div>
Type
</a>
</li>
			             </ul>
								</div>

		                        <div class="tab-content">

		                            <div class="tab-pane" id="location">

		                            	<div class="row">

																		<div style="padding-top:6%">
																			<div class="col-sm-12">
																					<h5 class="info-text"> Let's start with the basic details</h5>
																		</div>
																			<div class="col-sm-5 col-sm-offset-1">
																					<div class="form-group">
																							<label>Date of tour</label>
																							<input class="form-control" type="text" id="datepicker" placeholder="Date of tour" name="date">
																					</div>
																			</div>
																			<div class="col-sm-5">
																					<div class="form-group">
																							<label>No of tourists</label>
																							<div class="input-group">
																									<input type="number" class="form-control" placeholder="No. of tourists" name="number" >
																									<span class="input-group-addon">@</span>
																							</div>
																					</div>
																			</div>
																		</div>

		                            	</div>
		                            </div>

																<div class="tab-pane" id="slot">
		                                <h5 class="info-text">What slot do you prefer? </h5>
		                                <div class="row">
																			<div class="col-sm-2"></div>
		                                    <div class="col-sm-8" >
		                                        <div class="col-sm-4 form-group">
													<div class="choice" data-toggle="wizard-checkbox">

		                                                <input class="form-control" type="checkbox" name="slot" value="mrng"/>
		                                                <div onclick="check('mrng')" class="abcd card card-checkboxes card-hover-effect">
		                                                    <i id="mrng" class="fas fa-cloud-sun"></i>
															<p>Morning</p>
		                                                </div>
		                                            </div>
		                                        </div>
		                                        <div class="col-sm-4" form-group>
													<div class="choice" data-toggle="wizard-checkbox">
		                                                <input class="form-control" type="checkbox" name="slot" value="noon"/>
		                                                <div onclick="check('noon')" class="abcd card card-checkboxes card-hover-effect">
		                                                    <i id="noon" class="far fa-sun"></i>
															<p>Afternoon</p>
		                                                </div>
		                                            </div>
		                                        </div>
																						<div class="col-sm-4 form-group">
													<div class="choice" data-toggle="wizard-checkbox">
		                                                <input class="form-control" type="checkbox" name="slot" value="evng"/>
		                                                <div  class="abcd card card-checkboxes card-hover-effect">
		                                                    <i id="evng" class="fas fa-moon"></i>
															<p>Evening</p>
		                                                </div>
		                                            </div>
		                                        </div>
		                                    </div>
																				<div class="col-sm-2"></div>
		                                </div>
		                            </div>

																<div class="tab-pane" id="type">
		                                <h5 class="info-text">How would you like to travel? </h5>
		                                <div class="row">
		                                    <div class="col-sm-8 col-sm-offset-2">
		                                        <div class="col-sm-4 col-sm-offset-2">
													<div class="choice" data-toggle="wizard-checkbox">
		                                                <input type="checkbox" name="type" value="solo">
		                                                <div class="abcd card card-checkboxes card-hover-effect">
		                                                    <i class="fas fa-user"></i>
															<p>Personal</p>
		                                                </div>
		                                            </div>
		                                        </div>
		                                        <div class="col-sm-4">
													<div class="choice" data-toggle="wizard-checkbox">
		                                                <input type="checkbox" name="type" value="group">
		                                                <div class="abcd card card-checkboxes card-hover-effect">
		                                                    <i class="fas fa-users"></i>
															<p>Group</p>
		                                                </div>
		                                            </div>
		                                        </div>
		                                    </div>
		                                </div>
		                            </div>

		                        </div>
														<div class="wizard-footer">
	                            	<div class="pull-right">
	                                    <input type='button' class='btn btn-next btn-fill btn-success btn-wd' data-color="green" name='next' value='Next' />
	                                    <input type='submit' class='btn btn-finish btn-fill btn-success btn-wd' name='submit' value='Finish' />
									</div>

	                                <div class="pull-left">
	                                    <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
	                                </div>
	                                <div class="clearfix"></div>
		                        </div>
		                    </form>
		                </div>
		            </div> <!-- wizard container -->
		        </div>
	        </div> <!-- row -->
	    </div> <!--  big container -->



